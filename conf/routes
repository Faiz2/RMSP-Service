# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# 失败的Filter
#GET     /page/:link                 controllers.RMSPRoutesController.page(link: String)
#GET     /page/                      controllers.RMSPRoutesController.page(link: String = "home")
#GET     /page                       controllers.RMSPRoutesController.page(link: String = "home")


GET     /                           controllers.RMSPRoutesController.login
GET     /login                      controllers.RMSPRoutesController.login
GET     /register                   controllers.RMSPRoutesController.register
GET     /index                      controllers.RMSPRoutesController.index

# 通过jQuery的$.get获取页面
GET     /market_info                controllers.RMSPRoutesController.marketInfo
GET     /brd_info                   controllers.RMSPRoutesController.brdInfo
GET     /product_info               controllers.RMSPRoutesController.productInfo
GET     /business_decision          controllers.RMSPRoutesController.businessDecision
GET     /management_decision        controllers.RMSPRoutesController.managementDecision
GET     /report                     controllers.RMSPRoutesController.report

# 都是读取Excel内容的
POST    /market_info                controllers.marketinfo.MarketInfoController.alOutExcelValueWithHtml
POST    /brd_info                   controllers.brdinfo.BrdInfoController.alOutExcelValueWithHtml
POST    /product_info               controllers.productinfo.ProductInfoController.alOutExcelValueWithHtml
POST    /business_decision          controllers.decision.DecisionController.alOutSumPromoBudgetExcelValueWithHtml
POST    /management_decision        controllers.decision.DecisionController.alOutSumPromoBudgetExcelValueWithHtml


# 用户注册
POST    /user/register              controllers.user.RegisterController.registerUser

# 用户登入
POST    /user/authpwd               controllers.auth.AuthController.authWithPassword

# 用户call R
POST    /submit/submitdata          controllers.submit.SubmitController.submitDataCallR

# 报告查看
# 市场销售
POST    /report/querymarketsales    controllers.report.ReportController.reportMarketSalesController
# 代表报告
POST    /report/querydelegate       controllers.report.ReportController.reportDeputyController
# 经理报告
POST    /report/querymanager        controllers.report.ReportController.reportManagerController
# 分配报告
POST    /report/queryaloot          controllers.report.ReportController.reportAllotController
# 销售报告
# 销售额/客户
POST    /report/querysalsecustomer  controllers.report.ReportController.reportSalesCustomerController
# 销售额/代表
POST    /report/querysalsedeputy    controllers.report.ReportController.reportSalesDeputyController
# 销售额/产品
POST    /report/querysalseproduct   controllers.report.ReportController.reportSalesProductController


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
