# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~



#GET     /page/:link                controllers.RMSPRoutesController.page(link: String)
#GET     /page/                      controllers.RMSPRoutesController.page(link: String = "home")
#GET     /page                       controllers.RMSPRoutesController.page(link: String = "home")


GET     /                           controllers.RMSPRoutesController.index

GET     /market_info                controllers.RMSPRoutesController.marketInfo
GET     /brd_info                   controllers.RMSPRoutesController.brdInfo
GET     /product_info               controllers.RMSPRoutesController.productInfo
GET     /business_decision          controllers.RMSPRoutesController.businessDecision

GET     /report                     controllers.RMSPRoutesController.report

POST    /market_info                controllers.marketinfo.MarketInfoController.alOutExcelValueWithHtml
POST    /brd_info                   controllers.brdinfo.BrdInfoController.alOutExcelValueWithHtml
POST    /product_info               controllers.productinfo.ProductInfoController.alOutExcelValueWithHtml
POST    /business_decision          controllers.decision.DecisionController.alOutSumPromoBudgetExcelValueWithHtml

# 用户注册
POST    /user/register              controllers.user.RegisterController.registerUser

# 用户登入
POST    /user/authpwd               controllers.auth.AuthController.authWithPassword

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
