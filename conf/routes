# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                           controllers.RMSPRoutesController.login
GET     /login                      controllers.RMSPRoutesController.login
GET     /register                   controllers.RMSPRoutesController.register
GET     /index                      controllers.RMSPRoutesController.index(uuid = "")
GET     /index/:uuid                controllers.RMSPRoutesController.index(uuid)
GET     /brd                        controllers.RMSPRoutesController.brd(uuid = "")
GET     /brd/:uuid                  controllers.RMSPRoutesController.brd(uuid)
GET     /product                    controllers.RMSPRoutesController.product(uuid = "")
GET     /product/:uuid              controllers.RMSPRoutesController.product(uuid)
GET     /market                     controllers.RMSPRoutesController.market(uuid = "", phrase = "1")
GET     /market/:uuid/:phrase       controllers.RMSPRoutesController.market(uuid, phrase)
GET     /decision                   controllers.RMSPRoutesController.decision(uuid = "", phrase = "1")
GET     /decision/:uuid/:phrase     controllers.RMSPRoutesController.decision(uuid, phrase)
GET     /management                 controllers.RMSPRoutesController.management(uuid = "", phrase = "1")
GET     /management/:uuid/:phrase   controllers.RMSPRoutesController.management(uuid, phrase)
GET     /report                     controllers.RMSPRoutesController.report(uuid = "", phrase = "1")
GET     /report/:uuid/:phrase       controllers.RMSPRoutesController.report(uuid, phrase)

GET     /phase_error/:uuid/:phase   controllers.RMSPRoutesController.phase_error(uuid, phase)

GET     /takenew                    controllers.RMSPRoutesController.takenew
GET     /takelast/:uuid             controllers.RMSPRoutesController.takelast(uuid)

POST    /decision/proceed           controllers.RMSPRoutesController.updatedecision
POST    /management/proceed         controllers.RMSPRoutesController.updatemanagement

# 下载report
GET     /download/report/:name      controllers.FopController.downloadFile(name)

# 用户注册
POST    /user/register              controllers.user.RegisterController.registerUser
POST    /register/check/name        controllers.user.RegisterController.registerUserCheckAccount
POST    /register/check/email       controllers.user.RegisterController.registerUserCheckEmail
POST    /register/check/phone       controllers.user.RegisterController.registerUserCheckPhone

# 用户登入
POST    /user/authpwd               controllers.auth.AuthController.authWithPassword

# 用户call R
POST    /submit/submitdata          controllers.rscript.RscriptController.callCalcRscript

# 生成Excel
POST    /submit/create              controllers.rscript.RscriptController.callDownLoadExcelRscript

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
